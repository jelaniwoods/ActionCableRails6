<div class="card mb-3">
  <h2 class="card-header h4">
    Enrollment #<%= enrollment.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>User</dt>
      <dd><%= enrollment.user_id %></dd>

      <dt>Context</dt>
      <dd><%= enrollment.context_id %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back enrollment, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_enrollment_url(enrollment), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to enrollment, method: :delete, data: { confirm: "Do you really want to delete this enrollment?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(enrollment.updated_at) %> ago
  </div>
</div>
